matrix_new = np.zeros((8,3))

runs_needed = input("Enter how many runs you need: ")
runs_needed = int(runs_needed)

for key, value in propcounter(matrix_dict_new,runs_needed).items():
    row = int(key[0:3], 2)
    col = int(key[3])
    matrix_new[row, col] = propcounter(matrix_dict_new,runs_needed)[key]
    print([row,col])

print(matrix_new)
# Labels for rows and columns
row_labels = [format(i, '03b') for i in range(8)]
col_labels = ['0', '1', '2']

# Plot the table
plt.figure(figsize=(8, 6))
plt.table(cellText=np.round(matrix_new, 2),
          rowLabels=row_labels,
          colLabels=col_labels,
          loc='center')
plt.axis('off')  # Hide axes
plt.title('Run-expectancy Matrix')
plt.show()
